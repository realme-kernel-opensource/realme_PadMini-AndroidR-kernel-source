					sprd,cabc-video-command = [
						23 00 00 02 55 03
						];


					display-timings {
						native-mode = <&NT36672C_tm_timing0>;

						NT36672C_tm_timing0: timing0 {
							clock-frequency = <192000000>;
							hactive = <1080>;
							vactive = <2408>;
							hback-porch = <66>;
							hfront-porch = <142>;
							vback-porch = <54>;
							vfront-porch = <12>;
							hsync-len = <16>;
							vsync-len = <8>;
